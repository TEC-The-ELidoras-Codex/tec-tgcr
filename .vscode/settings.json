{
  // ============================================================
  // PROJECT-LEVEL VS CODE SETTINGS (Secure & Centralized)
  // ============================================================
  // These settings keep your project consistent across all team members
  // and environments (local, CI/CD, containers, etc.)

  // Python: Use project .venv (works on both Windows & Linux)
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestArgs": ["tests", "-q"],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.analysis.typeCheckingMode": "basic",

  // Formatting & Code Style
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,

  // Language-specific formatters
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },

  // Exclude build artifacts, cache, and secrets from Explorer & Search
  "files.exclude": {
    "**/.env.local": true,
    "**/.secrets.env": true,
    ".wpcom-dist": true,
    "ai-workflow/output": true,
    "exports/wp-plugin": true,
    "dist": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true,
    ".ruff_cache": true
  },
  "search.exclude": {
    "**/.env.local": true,
    "**/.secrets.env": true,
    ".wpcom-dist": true,
    "ai-workflow/output": true,
    "exports/wp-plugin": true,
    "dist": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true,
    ".ruff_cache": true
  },

  // Git & VCS
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",

  // Debug
  "debug.console.closeOnEnd": false,

  // Security: Don't prompt for local file protocol handling
  "security.promptForLocalFileProtocolHandling": false,
  "security.workspace.trust.untrustedFiles": "open"
}
