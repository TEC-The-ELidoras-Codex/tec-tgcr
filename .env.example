# ================================================================================
# TEC-TGCR Example Environment File
# ================================================================================
# Copy this file to .env.local and fill in your real secrets for local development.
# NEVER commit your real .env.local to git!
# ================================================================================

# ================================================================================
# CORE DEVELOPMENT SETTINGS (Required for basic functionality)
# ================================================================================

ENVIRONMENT=development
DEBUG=true

# ================================================================================
# PRIMARY AI/ML API KEYS (Most frequently used)
# ================================================================================

# OpenAI (GPT-4, GPT-3.5, DALL-E, embeddings) - Primary AI provider
OPENAI_API_KEY=your-openai-api-key
TEC_OPENAI_API_KEY=your-tec-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic (Claude for LuminAI conversations)
ANTHROPIC_API_KEY=your-anthropic-api-key

# xAI (Grok - experimental)
XAI_API_KEY=your-xai-api-key

# ================================================================================
# GITHUB INTEGRATION (App authentication for advanced features)
# ================================================================================

# GitHub Personal Access Token (basic operations)
GITHUB_TOKEN=your-github-token
# GitHub App Credentials (advanced integrations, webhook handling)
GITHUB_APP_ID=your-github-app-id
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_INSTALLATION_ID=your-github-installation-id
GITHUB_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
your-github-private-key
-----END RSA PRIVATE KEY-----

# ================================================================================
# NOTION INTEGRATION (Workspace API access)
# ================================================================================

# Notion Internal Integration Token (from Notion > Settings & members > Connections)
NOTION_TOKEN=your-notion-token

# ================================================================================
# WORDPRESS.COM INTEGRATION (Critical for deployment)
# ================================================================================

# WordPress.com Application Password (REST API)
TEC_WPCOM_API_PASS=your-wpcom-api-pass

# SSH Deployment Configuration
WPCOM_SSH_HOST=sftp.wp.com
WPCOM_SSH_PORT=22
WPCOM_SSH_USER=your-wpcom-ssh-user
WPCOM_SSH_TARGET=-----BEGIN OPENSSH PRIVATE KEY-----
your-wpcom-ssh-target
-----END OPENSSH PRIVATE KEY-----
WPCOM_SSH_PRIVATE_KEY=-----BEGIN OPENSSH PRIVATE KEY-----
your-wpcom-ssh-private-key
-----END OPENSSH PRIVATE KEY-----

# ================================================================================
# CONTENT & WORLD-BUILDING APIs
# ================================================================================

# WorldAnvil API (lore integration)
WORLDANVIL_API_KEY=your-worldanvil-api-key
WORLDANVIL_API_BASE=https://www.worldanvil.com/api
WORLDANVIL_USER_ID=your-worldanvil-user-id

# Civitai (AI model marketplace)
CIVITAI_API_KEY=your-civitai-api-key
CIVITAI_API_BASE=https://civitai.com/api/v1

# ================================================================================
# SPOTIFY INTEGRATION (Resonance system)
# ================================================================================

# Spotify (server-side usage only - DO NOT expose to browser)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Arcadia resonance backend
TEC_ARCADIA_URL=http://localhost:8080/resonance

# ================================================================================
# LOCAL DEVELOPMENT TOOLS
# ================================================================================

# Stable Diffusion (local GPU)
SD_API_URL=http://127.0.0.1:7860
SD_API_KEY=

# Blender
BLENDER_PATH=C:\Program Files\Blender Foundation\Blender 4.0\blender.exe

# GitLab
GITLAB_PAT=your-gitlab-pat
# Zoho
CONNECT_ZOHO_SCOPE_ID=your-zoho-scope-id
CONNECT_ZOHO_PARTITION_ID=your-zoho-partition-id
ZOHO_VANI_API_KEY=your-zoho-vani-api-key
# Ollama
TEC_OLLAMA_API_KEY=your-ollama-api-key
# RunwayML
TEC_RUNWAY_API_KEY=your-runway-api-key
